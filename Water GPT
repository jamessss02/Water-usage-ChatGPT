<body>
  
  <h1>ðŸ’§ ChatGPT Water Usage Calculator</h1>
  <p>Estimate your AI water footprint.</p>
  
  <input type="number" id="searches" placeholder="Enter number of ChatGPT searches">
  <br>
  <button onclick="calculate()">Calculate Water Usage</button>
  
  <h2 id="result"></h2>

  <script>
    function calculate() {
      const searches = document.getElementById('searches').value;
      if (searches === '' || searches < 0) {
        document.getElementById('result').innerText = 'Please enter a valid number.';
        return;
      }
      const waterUsed = (searches * (1/15)).toFixed(2);
      document.getElementById('result').innerText = `ðŸ’§ You've used approximately ${waterUsed} teaspoons of water.`;
    }
  </script>

